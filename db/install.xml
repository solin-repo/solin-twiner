<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/solin_twiner" VERSION="20140926" COMMENT="XMLDB file for Moodle local/solin_twiner"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="twiner_triggers" COMMENT="Store information about registered event-action triggers">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="eventname" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" COMMENT="Component which started event"/>
        <FIELD NAME="action" TYPE="char" LENGTH="6" NOTNULL="true" SEQUENCE="false" COMMENT="Action which will be started on this event"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="eventname" UNIQUE="false" FIELDS="eventname"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="twiner_notifications" COMMENT="Store information about notification actions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="creator_id" TYPE="int" LENGTH="5" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Creatot. 0 if created by admin."/>
        <FIELD NAME="trigger_id" TYPE="int" LENGTH="9" NOTNULL="true" SEQUENCE="false" COMMENT="Associated trigger from twiner_triggers"/>
        <FIELD NAME="targettype" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="individual" SEQUENCE="false" COMMENT="Type of target. Individual,course"/>
        <FIELD NAME="target_id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Target id, depends on type"/>
        <FIELD NAME="subject" TYPE="char" LENGTH="400" NOTNULL="true" DEFAULT="New message" SEQUENCE="false" COMMENT="Message subject"/>
        <FIELD NAME="body" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Message body"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="trigger" TYPE="foreign" FIELDS="trigger_id" REFTABLE="twiner_triggers" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="twiner_enrol" COMMENT="twiner_enrol table retrofitted from MySQL">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="creator_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="trigger_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="trigger" TYPE="foreign" FIELDS="trigger_id" REFTABLE="twiner_triggers" REFFIELDS="id"/>
        <KEY NAME="user" TYPE="foreign" FIELDS="user_id" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="course" TYPE="foreign" FIELDS="course_id" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="twiner_groups" COMMENT="twiner_groups table retrofitted from MySQL">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="creator_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="trigger_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="group_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="trigger" TYPE="foreign" FIELDS="trigger_id" REFTABLE="twiner_triggers" REFFIELDS="id"/>
        <KEY NAME="user" TYPE="foreign" FIELDS="user_id" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="course" TYPE="foreign" FIELDS="course_id" REFTABLE="course" REFFIELDS="id"/>
        <KEY NAME="group" TYPE="foreign" FIELDS="group_id" REFTABLE="groups" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="twiner_cohorts" COMMENT="twiner_cohorts table retrofitted from MySQL">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="creator_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="trigger_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="cohort_id" TYPE="int" LENGTH="18" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="trigger" TYPE="foreign" FIELDS="trigger_id" REFTABLE="twiner_triggers" REFFIELDS="id"/>
        <KEY NAME="user" TYPE="foreign" FIELDS="user_id" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="cohort" TYPE="foreign" FIELDS="cohort_id" REFTABLE="cohort" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>